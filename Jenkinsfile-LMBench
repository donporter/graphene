pipeline {
        agent any
        stages {
                stage('Build') {
                    steps {
                        sh '''
                            make
                            cd LibOS/shim/test/apps/lmbench
                            make
                            make test-native
                            make test-graphene
                        '''

                    }
                }
                stage('Test') {
                    steps {
                        sh '''
                            ./pal lat_udp -s &
                            ./pal lat_udp 127.0.0.1
                            ./pal lat_udp -127.0.0.1
                        '''

                        input 'Tests complete. Do you wish to deploy?'
                    }
                }
        }
        post {
                success {
                        echo 'Deployment successful'
                }
                failure {
                        echo 'Failure while on the pipeline'
                }
                unstable {
                        echo 'Pipeline marked as "unstable"'
                }
        }
}